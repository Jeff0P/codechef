#include <iostream>

using namespace std;

int main()
{
    int t,flag,i;
    string s;

    cin>>t;

    while(t--)
    {
        cin>>s;
        flag=0;
        for(i = 0; i < s.length()-1; i++)
        {
            if(s[i]=='<' && s[i+1]=='>')
                flag++;

        }

        cout<<flag<<endl;
    }
}
