#include <iostream>
using namespace std;


int main() {
  int t,a,n,k,i;
  

    cin>>a>>n>>k;
    
    while(k--)
    {
      if(a%(n+1)>=0)
      cout<<a%(n+1)<<" ";
      else if (a>0 && a<=n)
      cout<<a<<" ";
      else
      cout<<0<<" ";
      
      
      a = (a-(a%(n+1)))/(n+1);
     
    }
    cout<<endl;
  
}
